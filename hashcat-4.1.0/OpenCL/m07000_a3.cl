    p3[1] = 0;
    p3[2] = 0;
    p3[3] = 0;

    sha1_update_vector_64 (&ctx, p0, p1, p2, p3, 24);

    sha1_final_vector (&ctx);

    const u32x r0 = ctx.h[DGST_R0];
    const u32x r1 = ctx.h[DGST_R1];
    const u32x r2 = ctx.h[DGST_R2];
    const u32x r3 = ctx.h[DGST_R3];

    COMPARE_M_SIMD (r0, r1, r2, r3);
  }
}

